{
  "name": "backend",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "schema:codegen": "graphql-codegen --config codegen.ts",
    "dev": "bun run schema:codegen && bun --watch src/index.ts",
    "start": "bun run schema:codegen && bun src/index.ts",
    "db:up": "docker compose -f ../docker-compose.yml up -d db",
    "db:down": "docker compose -f ../docker-compose.yml down",
    "db:bootstrap": "bun run prisma migrate dev --name init && bun run prisma generate",
    "prisma": "prisma"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.15.0",
    "@graphql-codegen/cli": "^6.1.1",
    "@graphql-codegen/schema-ast": "^5.0.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-graphql-request": "^6.4.0",
    "@graphql-codegen/typescript-operations": "^5.0.7",
    "@graphql-codegen/typescript-resolvers": "^5.1.5",
    "@types/bun": "latest",
    "@types/pg": "^8.16.0",
    "graphql-config": "^5.1.5",
    "prisma": "^7.3.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "graphql": "^16.12.0",
    "graphql-scalars": "^1.25.0",
    "graphql-yoga": "^5.18.0",
    "pg": "^8.18.0"
  }
}
